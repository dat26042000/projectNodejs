extend ../layout/layout.pug
block header
  nav.header-navbar.navbar-expand-md.navbar.navbar-with-menu.navbar-without-dd-arrow.fixed-top.navbar-semi-light
    .navbar-wrapper
      .navbar-container.content
        .collapse.navbar-collapse.show#navbar-mobile
          ul.nav.navbar-nav.mr-auto.float-left
            li.nav-item.d-block.d-md-none
              a.nav-link.nav-menu-main.menu-toggle.hidden-xs(href="#")
                i.ft-menu
            li.nav-item.d-none.d-md-block
              a.nav-link.nav-link-expand(href="#")
                i.ficon.ft-maximize
            li.nav-item.dropdown.navbar-search
              a.nav-link.dropdown-toggle.hide(data-toggle="dropdown" href="#")
                i.ficon.ft-search
              ul.dropdown-menu
                li.arrow_box
                  form
                    .input-group.search-box
                      .position-relative.has-icon-right.full-width
                        input.form-control#search(type="text" placeholder="Search here...")
                        .form-control-position.navbar-search-close
                          i.ft-x
          ul.nav.navbar-nav.float-right
            li.dropdown.dropdown-language.nav-item
              a.dropdown-toggle.nav-link#dropdown-flag(href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
                i.flag-icon.flag-icon-us
                span.selected-language
              .dropdown-menu(aria-labelledby="dropdown-flag")
                .arrow_box
                  a.dropdown-item(href="#")
                    i.flag-icon.flag-icon-us
                    |  English
                  a.dropdown-item(href="#")
                    i.flag-icon.flag-icon-cn
                    |  Chinese
                  a.dropdown-item(href="#")
                    i.flag-icon.flag-icon-ru
                    |  Russian
                  a.dropdown-item(href="#")
                    i.flag-icon.flag-icon-fr
                    |  French
                  a.dropdown-item(href="#")
                    i.flag-icon.flag-icon-es
                    |  Spanish
          ul.nav.navbar-nav.float-right
            li.dropdown.dropdown-notification.nav-item
              a.nav-link.nav-link-label(href="#" data-toggle="dropdown")
                i.ficon.ft-mail
              .dropdown-menu.dropdown-menu-right
                .arrow_box_right
                  a.dropdown-item(href="#")
                    i.ft-book
                    |  Read Mail
                  a.dropdown-item(href="#")
                    i.ft-bookmark
                    |  Read Later
                  a.dropdown-item(href="#")
                    i.ft-check-square
                    |  Mark all Read
            li.dropdown.dropdown-user.nav-item
              a.dropdown-toggle.nav-link.dropdown-user-link(href="#" data-toggle="dropdown")
                span.avatar.avatar-online
                  img(src="/img/portrait/small/avatar-s-19.png" alt="avatar")
                  i
              .dropdown-menu.dropdown-menu-right
                .arrow_box_right
                  a.dropdown-item(href="#")
                    span.avatar.avatar-online
                      img(src="/img/portrait/small/avatar-s-19.png" alt="avatar")
                    if !admin
                      span.text-bold-700.ml-1(style="font-size: 10px; font-weight: bold")
                    else
                      span.text-bold-700.ml-1(style="font-size: 10px; font-weight: bold")=admin.name
                  a.dropdown-item(href="#")
                    i.ft-user
                    |  Edit Profile
                  a.dropdown-item(href="#")
                    i.ft-mail
                    |  My Inbox
                  a.dropdown-item(href="#")
                    i.ft-check-square
                    |  Task
                  a.dropdown-item(href="#")
                    i.ft-message-square
                    |  Chats
                  a.dropdown-item(href="logout")
                    i.ft-power
                    |  Logout
block content
  .app-content.content
    .content-wrapper
      .content-wrapper-before
      .content-header.row
        .content-header-left.col-md-4.col-12.mb-2
          h3.content-header-title Admin Detail
        .content-header-right.col-md-8.col-12
          .breadcrumbs-top.float-md-right
            .breadcrumb-wrapper.mr-1
              ol.breadcrumb
                li.breadcrumb-item
                  a(href="/admin") Home
                li.breadcrumb-item.active
                  a(href='/admin/employees') Admin
      .content-body
        .row
          .col-12
            .card
              .card-header
                h4.card-title Admin Detail
                a.heading-elements-toggle
                  i.la.la-ellipsis-v.font-medium-3
                .heading-elements
                  ul.list-inline.mb-0
                    li
                      a(data-action="collapse")
                        i.ft-minus
                    li
                      a(data-action="reload")
                        i.ft-rotate-cw
                    li
                      a(data-action="expand")
                        i.ft-maximize
                    li
                      a(data-action="close")
                        i.ft-x
              .card-content.collapse.show
                .card-body
                  .table-responsive
                    table.table
                      tr
                        td(scope ='row') Name
                        td(scope ='row')=datas.name
                      tr
                        td(scope ='row') Email
                        td(scope ='row')=datas.email
  script(src="/js/core/app-menu-lite.js", type="text/javascript")
  script(src="/js/core/app-lite.js", type="text/javascript")
  link(src="/css/A.style.css.pagespeed.cf.Qh1-GdQdyh.css", type="text/css")